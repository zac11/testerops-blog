<div class="author">
    <h1 class="author__heading">Hi, I am Rahul.</h1>
    <p class="author__body">SDET and a reader. Aviation Noob</p>
</div>
<img src="/img/hero-image.webp" alt="person looking out of window" class="hero-image" width="700" height="528">


<section class="articles">
<h2 class="article__heading">
    Latest Posts
</h2>

<ul class="article__listing">

    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span>
                    <%= post.title %>
                </span>
                <span class="article__listing_dt">
                    <%= post.createdAt.toDateString() %>
                </span>
            </a>
        </li>
     
    <% }) %>
  


</ul>

<% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
<% } %>



</section>